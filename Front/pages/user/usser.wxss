    .userInformation {/*头像&微信名称*/
        display: flex;

    }
    .userpicture { 

        display: flex;
        justify-content: center;
        overflow: hidden;
        width: 200rpx;
        height: 200rpx;
        margin: 30rpx;
        margin-top: 30rpx;
        margin-left: 40rpx;
        
    }
    
    .username {
        color: #000000;
        font-size: 20px;
        font-weight: bold;
        width: 320rpx;
        height: 120px;
        line-height: 120px;
    }
    
    .huitiao {
        height: 10px;

        position:relative;
        top: 0px;
    }
    
    .function {
        width: 100%;

        margin-top: 0rpx;
        overflow: hidden;
        display: flex;
    }
    
    .functioninformation {
        display: flex;
        /*negative: url(pages/feedback/feedback);*/
    }
    
    .licon {
        display: flex;
        margin: 9px;
        left: 9px;
    }
    
    .icon-picture {/*图标*/
        display: flex;
        width: 30px;
        height: 30px;
    }
    
    .text {/*文字*/
        font-size: 17px;
        font-style: normal;
        font-weight: normal;
        width: 90px;
        position: relative;
        left: 0px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: #000000;
    }
    
    .ricon {
        display: flex;
        margin: 9px;
        position: absolute;
        right: 9px;
    }
 

